<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}TNT'print{% endblock %}</title>
        {% block stylesheets %}
            <link rel="icon" type="image/png" href="{{ asset('media/favicon.png') }}" />
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
            <link href="{{ asset('css/common.css') }}" rel="stylesheet"/>

            <script src="https://bossanova.uk/jspreadsheet/v4/jexcel.js"></script>
            <link rel="stylesheet" href="https://bossanova.uk/jspreadsheet/v4/jexcel.css" type="text/css" />

            <script src="https://jsuites.net/v4/jsuites.js"></script>
            <link rel="stylesheet" href="https://jsuites.net/v4/jsuites.css" type="text/css" />

            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        {% endblock %}
    </head>
    <body>
        {% block body %}
        <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 bg-white border-bottom box-shadow">
          <img class='tnt-print-logo' src="{{ asset('media/TNT_print.png') }}" alt="">
          <h5 class="my-0 mr-md-auto font-weight-normal">TNT'print</h5>
          <i class="fa-solid fa-circle-info fa-3x text-info pointer pull-right help-me"></i>
        </div>

        <div class="pricing-header px-3 py-3 mx-auto text-center">
          <h1 class="display-4"><b>TNT'print</b></h1>
        </div>

        <div class="row  justify-content-center">
          <div class="col-offset-2 col-8 pl-5 mb-3">
        <div class="card">
          <div class="card-header text-white bg-info">
            Paramètres TNT
          </div>
          <div class="card-body">
        <form>
          <div class="form-row">
            <div class="form-group col-4">
              <label for="tnt-account">Compte Expedio</label>
              <select class="form-control" id="tnt-account">
                <option>Imprimatur</option>
                <option>Maqprint</option>
              </select>
            </div>
          <div class="form-group col-4">
            <label for="sending-reference">Réference envoi</label>
            <input type="text" class="form-control" id="sending-reference" max='15' placeholder="Samse, Romus...">
            <small class="form-text text-muted">Limité à 15 caractéres max. </small>
          </div>
          <div class="form-group col-4">
            <label for="sending-type">Type d'envoi</label>
            <select class="form-control" id="sending-type">
              <option value="C">C - Colis</option>
              <option value="L">L - Liaison</option>
              <option value="S">S - Livraison le samedi</option>
            </select>
          </div>
        </div>
        <button type="button" id='check-my-labels' class="btn btn-success btn-sm float-right"> <i class="fa-solid fa-print mr-1"></i> Vérification avant impression</button>
      </form>
      </div>
      </div>
    </div>
    </div>
        <div class="row">
          <div class="col pl-5">


          <div id="spreadsheet"></div>
          </div>
        </div>

        {# custom modal #}
        <div id="custom-modal" class="modal fade" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">

                </div>
                </div>
            </div>
        </div>
        {% endblock %}
    </body>
    {% block scripts %}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script type="text/javascript" src="{{ asset('js/common.js') }}"></script>
    {% endblock %}
</html>
